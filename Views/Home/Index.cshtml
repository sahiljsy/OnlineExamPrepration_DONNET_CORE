@{
    ViewData["Title"] = "Index Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/imgs/wallpaper quotes Motivational Wallpapers With Quotes Study Abroad.jpg" alt="First slide" style="object-fit: cover; height: 350px">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/imgs/exam-preparation-slider.jpg" alt="Second slide" style="object-fit: cover; height: 350px">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid my-4" style="background-color:indigo">
    <h1 class="fw-bolder text-center text-capitalize fst-italic py-1 " style="color: white;"> "Practice well, and be the best!"</h1>

</div>

<div class="container">
    <div class="card my-4" style="border-radius:15px; box-shadow: 0 0 25px rgb(128 128 128)">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <img src="imgs/practice.jfif" width="100%" height="100%" />
                </div>
                <div class="col-md-8">
                    <h3 class="fst-italic text-black fw-bold"> We believe that the best way to score great is to practice</h3>
                    <label class="text-justify" style="font-size:large"> Our website makes it possible by providing various quiz from all the possible portions of the syllabus.Thus ensuring that there won't be lack of practice from our side and hoping you would enjoy giving the quiz.</label>
                </div>
            </div>
        </div>
    </div>

    <div class="card my-4" style="border-radius:15px; box-shadow: 0 0 25px rgb(128 128 128)">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <img src="imgs/start.jpg" width="100%" height="100%" />
                </div>
                <div class="col-md-8">
                    <h3 class="fst-italic text-black fw-bold"> Still confused where to start from?</h3>
                    <label class="text-justify" style="font-size:large"> Many of us are ready to hardwork but the thing is they don't know how and where to start from! We believe to visit the previous papers is the best thing to start with, which guides us how to prepare.</label>
                </div>
            </div>
        </div>
    </div>

    <div class="card my-4" style="border-radius:15px; box-shadow: 0 0 25px rgb(128 128 128)">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <img src="imgs/competition.jpg" width="100%" height="100%" />
                </div>
                <div class="col-md-8">
                    <h3 class="fst-italic text-black fw-bold"> Get best out of you</h3>
                    <label class="text-justify" style="font-size:large"> We believe that competitive environment always help you to bring best out of you.We provide great competitive environment so that we can bring the best out of you.</label>
                </div>
            </div>
        </div>
    </div>
    <h2 class="fw-bolder text-center text-capitalize text-black fst-italic py-1 "> "Best of luck!"</h2>
</div>
