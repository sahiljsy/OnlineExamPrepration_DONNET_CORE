@model List<UserRoleViewModel>

@{ 
    ViewData["title"] = "Add User IN Role";
    var roleId = ViewBag.RoleId;
}

<div class="container">
    <form method="post">
        <div class="row">
            <div class="col-7">
                <div class="card">
                    <div class="card-header">
                        <h2>Add/Remove User In Role</h2>
                    </div>
                    <div class="card-body">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].UserName" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                    @Model[i].UserName
                                </label>
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success" asp-action="AddUserInRole" asp-controller="Admin" asp-route-id="@roleId">Update</button>
                        <a asp-action="EditRole" asp-controller="Admin" asp-route-id="@roleId" class="btn btn-danger">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>