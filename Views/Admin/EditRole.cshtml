@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit USer Role";
}

<div class="container">
    <form method="post" class="mt-3">
        <div class="row">
            <div class="col-7">
                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" class="form-control" disabled />
                    <span class="text-danger" asp-validation-for="Id"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-7">
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span class="text-danger" asp-validation-for="RoleName"></span>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                User List for Role
            </div>
            <div class="card-body">
                @if(Model.Users.Any())
            {
                    foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                    <h5 class="card-title">No user Found</h5>
            }
            </div>
            <div class="card-footer">
                <a class="btn btn-success" asp-action="AddUserInRole" asp-controller="Admin" asp-route-id="@Model.Id">Add/Remove User</a>
                <a class="btn btn-danger" asp-action="UserRoleList" asp-controller="Admin">Cancel</a>

            </div>
        </div>
    </form>
</div>