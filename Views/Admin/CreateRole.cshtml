@model CreateRoleViewModel

@{
    ViewData["Title"] = "Create Role Page";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card" style="border-radius: 15px; box-shadow: 0 0 25px rgb(128 128 128)">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <img src="~/imgs/signuplogo.png" width="200px" height="125px" />
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    <h2 style="font-family: 'Palatino Linotype'; font-weight: bolder">Create-Role </h2>
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    <hr />
                                </center>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="RoleName"></label>
                                    <input asp-for="RoleName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="RoleName"></span>
                                </div>
                            </div>
                        </div>

                        
                        <center>
                            <input type="submit" class="btn btn-success" value="Create Role" />
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>