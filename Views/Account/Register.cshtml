@model RegisterViewModel

@{
    ViewData["Title"] = "SignUp Page";
} 
<div class="container">
    <form method="post">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card" style="border-radius: 15px; box-shadow: 0 0 25px rgb(128 128 128)">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <img src="~/imgs/signuplogo.png" width="200px" height="125px" />
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    <h2 style="font-family: 'Palatino Linotype'; font-weight: bolder">SIGN-UP </h2>
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    <hr />
                                </center>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DOB"></label>
                                    <input asp-for="DOB" class="form-control" />
                                    <span class="text-danger" asp-validation-for="DOB"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            @*<div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Mobile_No"></label>
                    <input asp-for="Mobile_No" class="form-control" />
                    <span class="text-danger" asp-validation-for="Mobile_No"></span>
                </div>
            </div>*@

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UserName"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="ProfilePicture" class="control-label"></label>
                                    <div class="custom-file">
                                        <input asp-for="ProfilePicture" class="form-control custom-file-input">
                                        <label class="custom-file-label">Choose file</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <center>
                            <input type="submit" class="btn btn-success" value="SignUP" />
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        })
    </script>
 }